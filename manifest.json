{
  "name": "扇贝助手增强版",
  "version": "1.13.0",
  "manifest_version": 2,
  "description": "任意网页查询并加入生词本、背单词页面简洁、增强词根词缀Webster功能、增加实用快捷键",
  "icons": {
    "48": "icon_48.png",
    "72": "icon_72.png",
    "128": "icon_128.png"
  },
  "background": {
    "scripts": [
      "js/jquery.min.js",
      "js/howler.min.js",
      "js/common.js",
      "js/background.js"
    ]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon_48.png",
    "default_popup": "popup.html",
    "default_title": "扇贝助手增强版"
  },
  "content_scripts": [
    {
      "matches": ["http://*.shanbay.com/**review**"],
      "css": ["css/style.css"],
      "js": [
        "js/jquery.min.js",
        "js/common.js",
        "js/dictionaries/etymology.js",
        "js/dictionaries/dict.js",
        "js/main.js"
      ]
    },
    {
      "css": ["css/shanbay.css"],
      "js": [
        "js/jquery.min.js",
        "js/shanbay.js"
      ],
      "matches": ["*://*/*"],
      "all_frames": true
    },
    {
      "js": [
        "js/jquery.min.js",
        "js/popup.js"
      ],
      "matches": ["http://*.shanbay.com/**vocabulary/add/batch/*"],
      "css": ["css/style.css"]
    },
    {
      "js": [
        "js/jquery.min.js",
        "js/vocabulary.js"
      ],
      "matches": ["http://*.shanbay.com/**learnings/library/*"]
    },
    {
      "js": [
        "js/jquery.min.js",
        "js/addBook.js"
      ],
      "matches": ["http://*.shanbay.com/wordbook/*"],
      "css": ["css/style.css"]
    }
  ],
  "permissions": [
    "tts",
    "cookies",
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "*://*/*",
    "\u003Call_urls\u003E"
  ],
  "web_accessible_resources": [
    "icon_48.png",
    "images/bg-pattern.png"
  ]
}
